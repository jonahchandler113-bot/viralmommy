# ViralMommy Environment Variables
# Copy this file to .env.local and fill in your actual values

# ============================================
# DATABASE CONFIGURATION (Railway PostgreSQL)
# ============================================
# Get this from Railway PostgreSQL service variables
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://postgres:password@container.railway.app:5432/railway"

# Optional: Direct connection URL (without connection pooling)
# Use this for migrations and schema operations
DIRECT_DATABASE_URL="postgresql://postgres:password@container.railway.app:5432/railway"

# ============================================
# REDIS CONFIGURATION (Railway Redis)
# ============================================
# Get this from Railway Redis service variables
# Format: redis://username:password@host:port
REDIS_URL="redis://default:password@container.railway.app:6379"

# ============================================
# AUTHENTICATION (NextAuth.js)
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
NEXTAUTH_SECRET="your-generated-secret-here"

# Your deployed application URL
# Development: http://localhost:3000
# Production: https://viralmommy.com
NEXTAUTH_URL="https://viralmommy.com"

# ============================================
# OAUTH PROVIDERS
# ============================================
# Google OAuth (for creator sign-in)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth (optional - for Facebook integration)
FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"

# Instagram OAuth (for content posting)
INSTAGRAM_CLIENT_ID="your-instagram-client-id"
INSTAGRAM_CLIENT_SECRET="your-instagram-client-secret"

# TikTok OAuth (for content posting)
TIKTOK_CLIENT_KEY="your-tiktok-client-key"
TIKTOK_CLIENT_SECRET="your-tiktok-client-secret"

# ============================================
# AI SERVICES
# ============================================
# Anthropic Claude API
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY="sk-ant-your-key-here"

# OpenAI API (for additional AI features)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-key-here"

# ============================================
# CLOUDFLARE R2 STORAGE
# ============================================
# Cloudflare R2 for media storage
# Get from: https://dash.cloudflare.com/
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="viralmommy-media"
R2_PUBLIC_URL="https://media.viralmommy.com"

# ============================================
# ERROR TRACKING & MONITORING
# ============================================
# Sentry for error tracking
# Get from: https://sentry.io/settings/
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# Enable Sentry in production
NEXT_PUBLIC_SENTRY_ENABLED="true"

# ============================================
# ANALYTICS (Optional)
# ============================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# PostHog Analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY="your-posthog-key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# ============================================
# PAYMENT PROCESSING (Stripe)
# ============================================
# Stripe for subscription payments
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_ID_STARTER="price_starter"
STRIPE_PRICE_ID_PRO="price_pro"
STRIPE_PRICE_ID_ENTERPRISE="price_enterprise"

# ============================================
# EMAIL SERVICE (Resend)
# ============================================
# Resend for transactional emails
# Get from: https://resend.com/api-keys
RESEND_API_KEY="re_your-resend-api-key"
EMAIL_FROM="noreply@viralmommy.com"

# ============================================
# RATE LIMITING & SECURITY
# ============================================
# Rate limit configuration (requests per minute)
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="60000"

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS="https://viralmommy.com,https://www.viralmommy.com"

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features during development
FEATURE_AI_GENERATION="true"
FEATURE_SOCIAL_POSTING="true"
FEATURE_VIDEO_PROCESSING="true"
FEATURE_BRAND_PARTNERSHIPS="false"

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV="production"
# Options: development, production, test
